<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medical_Index_Activity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1DB954">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ico_stroke"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stroke Prediction"
            android:textSize="32sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới Tính"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="Nam"
                android:textColor="#191414"
                android:textSize="17sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="20sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/work_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/glucose">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại công việc"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"/>

        <Spinner
            android:id="@+id/spn_work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:padding="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hypertension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/residence">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh Tăng Huyết Áp"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="23sp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có"
                android:textSize="17sp"
                android:textColor="#191414"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/heart_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/hypertension">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh Tim Mạch"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="23sp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="42sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ever_married"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/heart_disease">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn Đã Kết Hôn Chưa"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5sp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="9sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/smoking_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ever_married">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hút Thuốc"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6sp"
            android:layout_marginBottom="20sp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã từng"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="5sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="10sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="14sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

     <LinearLayout
        android:id="@+id/residence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/work_type">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khu vực sống"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24sp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nông thôn"
                android:textSize="17sp"
                android:textColor="#191414"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đô thị"
                android:textSize="17sp"
                android:textColor="#191414"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="10sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/age_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gender">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuổi"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="18"
            android:textSize="20sp"
            android:textColor="#191414"
            android:ems="3"
            android:layout_marginStart="10sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="92sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="20"
            android:textSize="20sp"
            android:textColor="#191414"
            android:ems="3"
            android:layout_marginStart="10sp"
            android:gravity="center"/>
    </LinearLayout>

     <LinearLayout
        android:id="@+id/glucose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/age_bmi">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ Số Đường Huyết"
            android:textSize="20sp"
            android:textColor="#191414"
            android:textStyle="bold"
            android:layout_marginStart="20sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="100"
            android:textSize="20sp"
            android:textColor="#191414"
            android:ems="3"
            android:layout_marginStart="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_predict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/smoking_status"
        android:gravity="center"
        android:text="Dự Đoán"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_predict"
        android:gravity="center"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"/>
</RelativeLayout>