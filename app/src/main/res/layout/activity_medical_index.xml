<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medical_Index_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1DB954">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ico_stroke"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttl_index"
                android:textSize="31sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="@string/gender"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp">

                <RadioButton
                    android:id="@+id/rb_gender_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="@string/rb_male"
                    android:textSize="17sp"/>


                <RadioButton
                    android:id="@+id/rb_gender_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_female"
                    android:textSize="17sp"
                    android:layout_marginStart="20sp"/>

                <RadioButton
                    android:id="@+id/rb_gender_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_other"
                    android:textSize="17sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="10sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/glucose">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_type"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"/>

            <Spinner
                android:id="@+id/spn_work_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:padding="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hypertension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/residence">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hypertension"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="23sp">
                <RadioButton
                    android:id="@+id/rb_yes_hypertension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_yes"
                    android:textSize="17sp"/>

                <RadioButton
                    android:id="@+id/rb_no_hypertension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_no"
                    android:textSize="17sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="10sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heart_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/hypertension">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_disease"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="23sp">
                <RadioButton
                    android:id="@+id/rb_yes_heart_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_yes"
                    android:textSize="17sp"
                    android:layout_marginStart="43sp"/>

                <RadioButton
                    android:id="@+id/rb_no_heart_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_no"
                    android:textSize="17sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="10sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ever_married"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/heart_disease">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ever_married"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5sp">
                <RadioButton
                    android:id="@+id/rb_yes_married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_yes"
                    android:textSize="17sp"
                    android:layout_marginStart="9sp"/>

                <RadioButton
                    android:id="@+id/rb_no_married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_no"
                    android:textSize="17sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="10sp"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smoking_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ever_married">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smoking_status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="6sp"
                android:layout_marginBottom="20sp">
                <RadioButton
                    android:id="@+id/rb_formerly_smoked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_formerly"
                    android:textSize="17sp"
                    android:layout_marginStart="5sp"/>

                <RadioButton
                    android:id="@+id/rb_smoked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_yes"
                    android:textSize="17sp"
                    android:layout_marginStart="7sp"/>

                <RadioButton
                    android:id="@+id/rb_never_smoked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_no"
                    android:textSize="17sp"
                    android:layout_marginStart="14sp"
                    android:layout_marginEnd="10sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/residence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/work_type">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/residence"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24sp">
                <RadioButton
                    android:id="@+id/rb_rural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_rural"
                    android:textSize="17sp"/>

                <RadioButton
                    android:id="@+id/rb_urban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_urban"
                    android:textSize="17sp"
                    android:layout_marginStart="7sp"
                    android:layout_marginEnd="10sp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/age_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gender">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"/>

            <EditText
                android:id="@+id/et_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/et_hit_age"
                android:textSize="20sp"
                android:inputType="number"
                android:ems="3"
                android:layout_marginStart="10sp"
                android:gravity="center"
                android:autofillHints="18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="92sp"/>

            <EditText
                android:id="@+id/et_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/et_hit_bmi"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:ems="3"
                android:layout_marginStart="10sp"
                android:gravity="center"
                android:autofillHints="20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/glucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/age_bmi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glucose"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"/>

            <EditText
                android:id="@+id/et_glucose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/et_hit_glucose"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:ems="3"
                android:layout_marginStart="30sp"
                android:gravity="center"
                android:autofillHints="100" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smoking_status"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/btn_predict"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_predict"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"/>

        <TextView
            android:id="@+id/tv_analysis_results"
            android:layout_below="@id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_analysis_result"
            android:textSize="18sp"
            android:textColor="#0535C4"
            android:layout_marginTop="20sp"
            android:layout_marginStart="35sp"/>

        <LinearLayout
            android:id="@+id/analysis_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_analysis_results">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:id="@+id/halfGauge_age"
                    android:layout_width="240sp"
                    android:layout_height="200sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="35sp"
                        android:background="@color/color_low"/>

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_normal"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_high"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_very_high"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_over_high"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_children"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_teens"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_adult"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_mid_adult"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_elderly"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_analysis_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:padding="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/analysis_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/analysis_age">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:id="@+id/halfGauge_bmi"
                    android:layout_width="240sp"
                    android:layout_height="200sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="50sp"
                        android:background="@color/color_low"/>

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_normal"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_high"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_very_high"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="45sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_underweight"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_ideal"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_overweight"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_obesity"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_analysis_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:padding="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/analysis_bmi">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:id="@+id/halfGauge_glucose"
                    android:layout_width="240sp"
                    android:layout_height="200sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="50sp"
                        android:background="@color/color_low"/>

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_normal"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_high"/>
                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginTop="20sp"
                        android:background="@color/color_very_high"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="45sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_glucose_low"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_glucose_normal"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_glucose_high"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginStart= "10sp"
                        android:text="@string/tv_glucose_very_high"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_analysis_glucose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:padding="15sp"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>