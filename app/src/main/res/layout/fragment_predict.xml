<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PredictFragment"
    android:background="@drawable/bgr_fr_predict">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="265dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="525dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_predict"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="115dp"
                android:layout_marginTop="10sp"/>
            <Button
                android:id="@+id/btn_predict_index"
                android:layout_width="290sp"
                android:layout_height="70sp"
                android:text="@string/btn_predict_index"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/color_app"/>

            <Button
                android:id="@+id/btn_predict_image"
                android:layout_width="290sp"
                android:layout_height="70sp"
                android:text="@string/btn_predict_image"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/color_app"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>